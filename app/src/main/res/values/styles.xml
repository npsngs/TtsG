<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="game_text_style">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:lines">1</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">1dp</item>
    </style>

    <style name="game_info_text_style">
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/game_info_text</item>
        <item name="android:lines">1</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingTop">3dp</item>
        <item name="android:paddingBottom">3dp</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:layout_marginBottom">3dp</item>
    </style>

    <style name="game_info_label_style">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:lines">1</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">1dp</item>
        <item name="android:layout_marginTop">3dp</item>
    </style>

    <style name="game_frame_style">
        <item name="android:padding">3dp</item>
        <item name="android:background">@drawable/ic_game_info_bg</item>
    </style>


    <style name="tetris_dialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item><!--边框-->
        <item name="android:windowIsFloating">true</item><!--是否浮现在activity之上-->
        <item name="android:windowIsTranslucent">false</item><!--半透明-->
        <item name="android:windowNoTitle">true</item><!--无标题-->
        <item name="android:windowBackground">@color/transparent</item><!--背景透明-->
        <item name="android:backgroundDimEnabled">true</item><!--模糊-->
    </style>
</resources>
