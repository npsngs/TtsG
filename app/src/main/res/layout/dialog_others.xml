<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@drawable/ic_dialog_bg"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="20dp"
    android:paddingBottom="20dp">


    <LinearLayout
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:id="@+id/ll_volume"
        android:layout_margin="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_marginLeft="10dp"
            android:src="@drawable/ic_music"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <com.grumpycat.tetrisgame.tools.VolumeView
            android:id="@+id/vv"
            android:layout_marginLeft="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>


    <LinearLayout
        android:id="@+id/ll_toggle_btns"
        android:layout_margin="8dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">

            <ImageView
                android:padding="2dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:src="@drawable/ic_button_layout" />

            <TextView
                android:id="@+id/tv_toggle_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:text="@string/toggle_layout"
                android:textColor="#c49f05"
                android:textSize="14sp" />
        </LinearLayout>


        <LinearLayout
            android:layout_marginTop="6dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="60dp">
            <RelativeLayout
                android:id="@+id/btn_layout1"
                android:gravity="center"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent">

                <ImageView
                    android:layout_margin="5dp"
                    android:id="@+id/iv_btn_l"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/ic_btn_left"
                    android:layout_width="20dp"
                    android:layout_height="20dp" />

                <ImageView
                    android:layout_margin="5dp"
                    android:id="@+id/iv_btn_r"
                    android:layout_toRightOf="@+id/iv_btn_l"
                    android:layout_centerVertical="true"
                    android:src="@drawable/ic_btn_right"
                    android:layout_width="20dp"
                    android:layout_height="20dp" />

                <ImageView
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="-15dp"
                    android:layout_alignTop="@+id/iv_btn_r"
                    android:layout_toRightOf="@+id/iv_btn_r"
                    android:src="@drawable/ic_btn_rotate"
                    android:layout_width="20dp"
                    android:layout_height="20dp" />

                <ImageView
                    android:layout_marginLeft="5dp"
                    android:layout_marginBottom="-10dp"
                    android:layout_alignBottom="@+id/iv_btn_r"
                    android:layout_toRightOf="@+id/iv_btn_r"
                    android:src="@drawable/ic_btn_fastdrop"
                    android:layout_width="20dp"
                    android:layout_height="20dp" />
            </RelativeLayout>


            <LinearLayout
                android:id="@+id/btn_layout2"
                android:alpha="0.3"
                android:gravity="center"
                android:orientation="horizontal"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent">
                <ImageView
                    android:src="@drawable/ic_btn_left"
                    android:layout_width="20dp"
                    android:layout_height="20dp" />

                <ImageView
                    android:layout_marginLeft="5dp"
                    android:src="@drawable/ic_btn_right"
                    android:layout_width="20dp"
                    android:layout_height="20dp" />

                <ImageView
                    android:layout_marginLeft="5dp"
                    android:src="@drawable/ic_btn_rotate"
                    android:layout_width="20dp"
                    android:layout_height="20dp" />

                <ImageView
                    android:layout_marginLeft="5dp"
                    android:src="@drawable/ic_btn_fastdrop"
                    android:layout_width="20dp"
                    android:layout_height="20dp" />
            </LinearLayout>
        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="30dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:src="@drawable/ic_logo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tv_studio"
            android:layout_marginLeft="10dp"
            android:text="Grumpy Cat Studio"
            android:textColor="#c49f05"
            android:textSize="16sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <TextView
        android:id="@+id/tv_email"
        android:layout_marginTop="4dp"
        android:gravity="center"
        android:layout_marginLeft="10dp"
        android:text="grumpy_studio@yeah.net"
        android:textColor="#776207"
        android:textSize="14sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
</LinearLayout>