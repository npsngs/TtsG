<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@drawable/ic_dialog_bg"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="40dp"
    android:paddingTop="30dp">

    <TextView
        android:id="@+id/tv_title"
        style="@style/game_text_style"
        android:textSize="34sp"
        android:textColor="@color/colorPrimary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Game Paused"/>

        <LinearLayout
            android:paddingRight="50dp"
            android:paddingLeft="50dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_marginTop="20dp"
                android:background="@drawable/sl_btn_bg"
                android:id="@+id/btn_continue"
                style="@style/game_text_style"
                android:text="CONTINUE GAME"
                android:layout_width="match_parent"
                android:layout_height="45dp" />
            <TextView
                android:layout_marginTop="12dp"
                android:background="@drawable/sl_btn_bg"
                android:id="@+id/btn_save_exit"
                style="@style/game_text_style"
                android:text="SAVE &amp; EXIT"
                android:layout_width="match_parent"
                android:layout_height="45dp" />
            <TextView
                android:layout_marginTop="12dp"
                android:background="@drawable/sl_btn_bg"
                android:id="@+id/btn_exit"
                style="@style/game_text_style"
                android:text="EXIT"
                android:layout_width="match_parent"
                android:layout_height="45dp" />
        </LinearLayout>

</LinearLayout>